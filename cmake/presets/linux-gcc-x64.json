{
  "version": 6,
  "include": [
    "base.json"
  ],
  "configurePresets": [
    {
      "name": "linux-gcc-x64-dbg",
      "displayName": "Linux GCC x64 Debug",
      "inherits": "linux-gcc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-linux-dynamic"
      }
    },
    {
      "name": "linux-gcc-x64-rel",
      "displayName": "Linux GCC x64 Release",
      "inherits": "linux-gcc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-linux-dynamic"
      }
    },
    {
      "name": "linux-gcc-x64-dbg-static-md",
      "displayName": "Linux GCC x64 Debug Static MD",
      "inherits": "linux-gcc-x64-dbg",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    },
    {
      "name": "linux-gcc-x64-rel-static-md",
      "displayName": "Linux GCC x64 Release Static MD",
      "inherits": "linux-gcc-x64-rel",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    }
  ]
}
