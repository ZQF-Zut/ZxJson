{
  "version": 6,
  "include": [
    "base.json"
  ],
  "configurePresets": [
    {
      "name": "win-msvc-x86-dbg",
      "displayName": "Windows MSVC x86 Debug",
      "inherits": "win-msvc-base",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "win-msvc-x86-rel",
      "displayName": "Windows MSVC x86 Release",
      "inherits": "win-msvc-base",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "win-msvc-x86-rel-mt",
      "displayName": "Windows MSVC x86 Release MT",
      "inherits": "win-msvc-x86-rel",
      "cacheVariables": {
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded",
        "VCPKG_TARGET_TRIPLET": "x64-win-static"
      }
    },
    {
      "name": "win-msvc-x86-msr-mt",
      "displayName": "Windows MSVC x86 MinSizeRel MT",
      "inherits": "win-msvc-x86-rel-mt",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel"
      }
    },
    {
      "name": "win-msvc-x86-rwi-mt",
      "displayName": "Windows MSVC x86 RelWithDebInfo MT",
      "inherits": "win-msvc-x86-rel-mt",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    }
  ]
}
