{
  "version": 6,
  "include": [
    "base.json"
  ],
  "configurePresets": [
    {
      "name": "linux-gcc-arm64-dbg",
      "displayName": "Linux GCC ARM64 Debug",
      "inherits": "linux-gcc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_SYSTEM_PROCESSOR": "arm64",
        "VCPKG_TARGET_TRIPLET": "arm64-linux-dynamic"
      }
    },
    {
      "name": "linux-gcc-arm64-rel",
      "displayName": "Linux GCC ARM64 Release",
      "inherits": "linux-gcc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_SYSTEM_PROCESSOR": "arm64",
        "VCPKG_TARGET_TRIPLET": "arm64-linux-dynamic"
      }
    },
    {
      "name": "linux-gcc-arm64-dbg-static-md",
      "displayName": "Linux GCC ARM64 Debug Static MD",
      "inherits": "linux-gcc-arm64-dbg",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm64-linux"
      }
    },
    {
      "name": "linux-gcc-arm64-rel-static-md",
      "displayName": "Linux GCC ARM64 Release Static MD",
      "inherits": "linux-gcc-arm64-rel",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm64-linux"
      }
    }
  ]
}
